Options -MultiViews
DirectoryIndex index.html
RewriteEngine On

# Base path where this app is hosted
RewriteBase /CSE442/2025-Fall/cse-442j/

# Redirect clean route names to their folder with trailing slash (helps when DirectoryIndex is ignored)
RewriteRule ^landing$ landing/ [L,R=302]
RewriteRule ^userpreferences$ userpreferences/ [L,R=302]

# Serve existing files/directories as-is
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Do not rewrite API calls (handled by PHP/backend)
RewriteRule ^api/ - [L]

# SPA fallback: send everything else to index.html
RewriteRule ^ index.html [L]

# Additionally, if rewrites are restricted, use 404 fallback to index.html
ErrorDocument 404 /CSE442/2025-Fall/cse-442j/index.html
